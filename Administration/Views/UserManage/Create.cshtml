@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div>
        <form class="form-horizontal" role="form" action="/UserManager/Create" method="post">
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">用户名</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="UserName"
                           placeholder="用户名">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-2 control-label">密码</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="PassWord"
                           placeholder="密码">
                </div>
            </div>
        </form>
    </div>
    <script type="text/javascript">
        function modelSub(id, contentid) {
       
            var data = $.ajax({
                type: "POST",
                url: "@Url.Action("Create", "UserManage")",
                data: "UserName=" + $("#UserName").val() + "&PassWord=" + $("#PassWord").val(),
                async: false
            }).responseText;

            $("#" + contentid).html(data);

         //   $('#' + id).modal('hide');
        }

    </script>
</body>

</html>
